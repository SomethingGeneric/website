        document.getElementById('techjournal-modal').classList.remove('hidden');
        document.getElementById('acknowledgement-modal').classList.add('hidden');
        document.getElementById('main-content').classList.remove('hidden');
      };
      // Hide techjournal modal
      document.getElementById('cancel-techjournal').onclick = function() {
        document.getElementById('techjournal-modal').classList.add('hidden');
      };
      // Form submit handler
      document.getElementById('techjournal-form').onsubmit = function(e) {
        e.preventDefault();
        const name = document.getElementById('name-input').value;
        const link = document.getElementById('link-input').value;
        const title = encodeURIComponent(`Add techjournal: ${name}`);
        const body = encodeURIComponent(`Name: ${name}\nTechjournal Link: ${link}`);
        window.location.href = `https://github.com/SomethingGeneric/website/issues/new?title=${title}&body=${body}`;
      };
    </script>

