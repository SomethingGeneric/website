<style>
  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
  }

  .modal-content {
    background-color: #111;
    border: 2px solid rgb(48, 187, 48);
    padding: 2rem;
    max-width: 500px;
    text-align: center;
    border-radius: 8px;
  }

  .modal-content h2 {
    color: red;
    margin-bottom: 1rem;
  }

  .modal-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .modal-button {
    background-color: rgb(48, 187, 48);
    color: #000;
    border: none;
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-family: 'Courier New', Courier, monospace;
    cursor: pointer;
    border-radius: 4px;
    font-weight: bold;
  }

  .modal-button:hover {
    background-color: rgb(243, 76, 26);
  }

  .hidden {
    display: none;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
  }

  th, td {
    border: 1px solid rgb(48, 187, 48);
    padding: 0.5rem;
    text-align: left;
  }

  th {
    background-color: #111;
    font-weight: bold;
  }

  tr:hover {
    background-color: #0a0a0a;
  }
</style>

<script>
  const modal = document.getElementById('acknowledgement-modal');
  const mainContent = document.getElementById('main-content');
  const acceptButton = document.getElementById('accept-button');

  if (acceptButton && modal && mainContent) {
    acceptButton.addEventListener('click', () => {
      modal.style.display = 'none';
      mainContent.classList.remove('hidden');
    });
  }
</script>
